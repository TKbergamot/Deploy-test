<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= attachment_image_tag @book_detail.user, :profile_image, :fill, 100, 100, format: "jpeg" %> <br>

		<table class="table">
			<tr>
				<th>name</th>
				<th><%= @book_detail.user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= @book_detail.user.introduction %></th>
			</tr>
		</table>
		  	<%= link_to edit_user_path(current_user) do %>
		  		<button type="button" class="btn btn-default btn-block">
		  			<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		  		</button>
		  	<% end %>

		<%= form_for(@book) do |f| %>

		<h2>New book</h2>
			<div class="field form-group">
				<%= f.label :title %><br>
				<%= f.text_field :title, class:"form-control" %>
			</div>
			<div class="field form-group">
				<%= f.label :Opinion %><br>
				<%= f.text_area :body, class:"form-control" %>
			</div>
			<div class="actions">
				<%= f.submit(class: 'btn btn-primary btn-block') %>
			</div>
		<% end %>

	</div>
	<div class="col-xs-9">

		<h1>Book detail</h1>

		<table class="table table-hover">
			<tbody>
				<tr>
					<td><%=link_to user_path(@book_detail.user) do %>
						<%= attachment_image_tag @book_detail.user, :profile_image, :fill, 40, 40, format: "jpeg", fallback:"no_image.png", size:"40x40" %><br>
						<%= @book_detail.user.name %>
					<% end %></td>
					<td><%= link_to @book_detail.title, book_path(@book_detail) %></td>
					<td><%= @book_detail.body %></td>
					<% if @book_detail.user.id == current_user.id %>
						<td><%= link_to "Edit", edit_book_path(@book_detail), class:"btn btn-success" %></td>
						<td><%= link_to "Destroy", book_path(@book_detail), class:"btn btn-danger", method: :delete, data:{confirm:"Are you sure?"} %>
							</td>
					<% end %>
				</tr>
			</tbody>
		</table>
	</div>
</div>